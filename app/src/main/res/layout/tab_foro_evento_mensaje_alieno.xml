<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="10dp"
    android:paddingEnd="60dp"
    android:paddingStart="15dp">


    <ImageView
        android:id="@+id/avatar_foro"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        tools:src="@mipmap/no_image_header_menu" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatar_foro"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/avatar_foro"
        android:paddingBottom="4dp"
        android:textColor="@android:color/darker_gray"
        tools:text="Rose" />

    <TextView
        android:id="@+id/message_body_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/name"
        android:paddingBottom="4dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        tools:text="15:00" />

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:background="@drawable/mensaje_alieno_foro_evento"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textColor="@color/bodyTextColor"
        android:textSize="18sp"
        tools:text="Texto de prueba" />
</RelativeLayout>